# Copy Trading Configuration

# Target wallet to copy trades from
TARGET_WALLET=GVJp1bkQgw3QdXBmvWRBK5SaXcr3kzf45SfrvRDobQQE

# Position size in SOL per trade
POSITION_SOL=0.5

# Solana Tracker API
SOLANATRACKER_API_KEY=your_api_key_here
WS_URL=wss://datastream.solanatracker.io/your-url

# NextBlock Configuration (for fastest execution)
NEXT_BLOCK_API_KEY=your-nextblock-api-key
NEXT_BLOCK_ENDPOINTS=fra.nextblock.io,ams.nextblock.io,nyc.nextblock.io
NEXT_BLOCK_USE_ANTI_MEV=true
NEXT_BLOCK_USE_GRPC=true

# Metis/Jupiter for Quote Building
METIS_URL=https://jupiter-swap-api.quiknode.pro/your-key
JUPITER_URL=https://quote-api.jup.ag/v6

# RPC Configuration
QUICKNODE_RPC=https://your-quicknode-endpoint.solana-mainnet.quiknode.pro/
PRIORITY_RPC=https://your-priority-rpc.com

# Your wallet (required for real trading)
WALLET_SECRET_KEY=your_wallet_private_key_base58

# Operation Mode
TEST_MODE=true  # Set to false for real trading
PAPER_TRADING=true  # Track without executing

# Risk Management
MAX_POSITIONS=20  # Maximum concurrent positions
MAX_DAILY_LOSS=-0.7  # Stop trading if daily loss exceeds 70%
MAX_EXPOSURE_SOL=10  # Maximum total SOL exposure
SLIPPAGE_BPS=200  # 2% slippage tolerance
MIN_LIQUIDITY_USD=5000  # Minimum liquidity to enter trade

# Execution Settings
EXECUTION_DELAY_MS=0  # Immediate execution
MAX_ENTRY_DELAY_SEC=5  # Skip trade if delayed more than this
USE_PRIORITY_FEES=true  # Use dynamic priority fees
MIN_PRIORITY_FEE=0.001  # Minimum 0.001 SOL priority fee

# Dashboard Configuration
ENABLE_DASHBOARD=true
DASHBOARD_PORT=4789
WS_SERVER_PORT=4790
DASHBOARD_UPDATE_MS=100  # Real-time updates every 100ms

# Monitoring
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_METRICS=true
METRICS_PORT=9090